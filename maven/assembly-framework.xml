<assembly>
    <id>ios-framework</id>
    <!-- Generates a zip package containing the needed files -->
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!-- adds package to the root directory of zip package -->

        <fileSet>
            <directory>${project.basedir}/openssl.framework</directory>
        </fileSet>
    </fileSets>

</assembly>
